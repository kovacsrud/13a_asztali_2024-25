<Window x:Class="WpfDbKutyak.Views.ViewKutyanev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDbKutyak.Views"
        mc:Ignorable="d"
        Title="ViewKutyanev" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridKutyanevek" IsReadOnly="True" ColumnWidth="*" MouseDoubleClick="datagridKutyanevek_MouseDoubleClick"/>
        <Button  x:Name="buttonUjkutyanev" Content="Új kutyanév" Grid.Row="1" Width="200" Height="30" FontSize="20" Click="buttonUjkutyanev_Click" />

        <Button  x:Name="buttonTorolkutyanev" Content="Törlés" Grid.Row="2" Width="200" Height="30" FontSize="20" Click="buttonTorolkutyanev_Click" />

    </Grid>
</Window>
