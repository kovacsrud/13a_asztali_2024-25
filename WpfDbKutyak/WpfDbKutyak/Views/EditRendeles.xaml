<Window x:Class="WpfDbKutyak.Views.EditRendeles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDbKutyak.Views"
        mc:Ignorable="d"
        Title="EditRendeles" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboKutyanevek" Width="200" Height="30" FontSize="22" DisplayMemberPath="KutyaNev" SelectedValuePath="Id"/>
        <ComboBox x:Name="comboKutyafajtak" Width="200" Height="30" FontSize="22" Grid.Row="1" DisplayMemberPath="Nev" SelectedValuePath="Id"/>
        <TextBox x:Name="textboxEletkor" Width="300" Height="30" FontSize="24" Grid.Row="2"/>
        <TextBox x:Name="textboxUtolsoEll" Width="300" Height="30" FontSize="24" Grid.Row="3"/>
        <Button x:Name="buttonRogzit" Content="Rögzítés" Width="200" Height="30" FontSize="20" Grid.Row="4" Click="buttonRogzit_Click"/>

    </Grid>
</Window>
