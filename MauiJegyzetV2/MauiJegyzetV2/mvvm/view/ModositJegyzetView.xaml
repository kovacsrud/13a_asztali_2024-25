<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiJegyzetV2.mvvm.view.ModositJegyzetView"
             Title="ModositJegyzetView">
    <VerticalStackLayout>
        <Label 
     Text="Jegyzet módosítása" FontSize="20"
     VerticalOptions="Center" 
     HorizontalOptions="Center" />
        <Entry x:Name="entryCim" Text="{Binding AktJegyzet.Cim}" />
        <Entry x:Name="entrySzoveg" Text="{Binding AktJegyzet.Szoveg}" />
        <Button x:Name="buttonModosit" Text="Módosítás" Command="{Binding UpdateCommand}"/>
    </VerticalStackLayout>
</ContentPage>