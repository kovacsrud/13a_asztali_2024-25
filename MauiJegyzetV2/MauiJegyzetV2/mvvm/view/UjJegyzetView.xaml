<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiJegyzetV2.mvvm.view.UjJegyzetView"
             Title="UjJegyzetView">
    <VerticalStackLayout>
        <Label 
            Text="Új jegyzet" FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="entryCim" Text="{Binding UjJegyzet.Cim}" />
        <Entry x:Name="entrySzoveg" Text="{Binding UjJegyzet.Szoveg}" />
        <Button x:Name="buttonUj" Text="Új jegyzet" Clicked="buttonUj_Clicked"/>
    </VerticalStackLayout>
</ContentPage>