<Window x:Class="WpfIdojarasDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIdojarasDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridIdojaras" ColumnWidth="*" RowEditEnding="datagridIdojaras_RowEditEnding"/>
        <Button x:Name="buttonUpdate" Content="Update" Grid.Row="1" Width="200" Height="40" Click="buttonUpdate_Click"/>

    </Grid>
</Window>
