<Window x:Class="WpfBindingFody.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBindingFody"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Text="{Binding Ertek,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" FontSize="20" />
            <TextBox Text="{Binding MasikErtek,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" FontSize="20" Margin="10,0,0,0"/>
        </WrapPanel>
        <Slider  Value="{Binding Ertek}" Minimum="0" Maximum="100" Grid.Row="1" VerticalAlignment="Center"  />
        <ProgressBar  Value="{Binding Ertek}" Minimum="0" Maximum="100" Height="20" Grid.Row="2" />
        <Slider Value="{Binding MasikErtek}" Minimum="0" Maximum="300" Grid.Row="3" VerticalAlignment="Center"/>


    </Grid>
</Window>
